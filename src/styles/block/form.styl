.form
    padding: rel-size(15px) 0;

    &__label
        display: block;
        margin-bottom: rel-size(30px);
        position: relative;
        cursor: pointer;

        &.done

            .form__input-name
                transform: translate(0, -100%);
                font-size: rel-size(12px);
                height: 50%;
                padding-left: 0;

    &__input-name
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        padding-left: rel-size(10px);
        display: flex;
        align-items: center;
        font-size: rel-size(18px);
        transition: font-size 0.3s, padding 0.3s, transform 0.3s, height 0.3s;

    &__input
        display: block;
        width: 100%;
        height: rel-size(40px);
        border: 1px solid #000;
        padding-left: rel-size(10px);
        outline: none;

        &:focus
        &.value

            + .form__input-name
                transform: translate(0, -100%);
                font-size: rel-size(12px);
                height: 50%;
                padding-left: 0;

    &__submit
        display: block;
        width: 100%;
        height: rel-size(40px);
        border: 0;
        background: #45b781;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
        transition: background 0.3s;
        user-select: none;
        outline: none;

        &:hover
            background: darken(#45b781, 10%);

        &:active
            background: #45b781;

.error

    input
        border: 1px solid #f00;

.done

    input
        border: 1px solid darken(#45b781, 10%);

.warningMsg
    opacity: 0;
    font-size: rel-size(10px);
    color: #f00;
    position: absolute;
    top: 100%;
    left: 0;
    transition: 0.3s;
