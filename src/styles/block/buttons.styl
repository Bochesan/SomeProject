.button
    display: inline-block;
    border-radius: 50px;
    padding: rel-size(15px) rel-size(65px);
    font-size: rel-size(17px);
    font-family: ff-Roboto;
    font-weight: 700;
    letter-spacing: 1px;
    color: white;
    text-transform: uppercase;
    transition: background 0.3s;

    &--blue
        background: #7ca5d9;

        &:hover
            background: darken(#7ca5d9, 10%)
