.header
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    width: 100%;
    transition: transform 0.5s, background 0.5s;

    &__content
        position: relative;
        padding: rel-size(15px) 2%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: transform 0.5s, background 0.5s;

    &.headroom--not-top

        +below(768px)

            .menu
                background: rgba(0,0,0,0.6);

        .header__content
            background: rgba(0,0,0,0.8);

        &.headroom--unpinned
            transform: translate(0,-100%);

            & .opened.menu
                transform: translate(0,-100%);

        &.headroom--pinned
            transform: translate(0,0);

            & .opened.menu
                transform: translate(0,0%);

    &__logo-link

        img
            width: rel-size(100px);
            height: auto;
