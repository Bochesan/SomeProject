.wpsSection
    padding-top: rel-size(75px);
    padding-bottom: rel-size(55px);

    &__title
        font-size: 30px;
        color: #8c8c8c;
        font-weight: 300;
        text-align: center;
        margin-bottom: rel-size(50px);

    &__slide
        display: flex;
        flex-direction: column;
        align-items: center;

    &__blockquote-text
        background: #f6f6f6;
        padding: rel-size(25px) rel-size(35px) rel-size(10px);
        max-width: rel-size(530px);
        position: relative;
        width: 100%;
        margin-bottom: rel-size(55px);
        font-family: ff-Sitka;
        font-size: rel-size(18px);
        color: #2a2a2a;

        &:before
            content: '‘‘';
            display: block;
            font-size: rel-size(30px);
            line-height: rel-size(30px);

        &:after
            content: '’’';
            display: block;
            text-align: right;
            font-size: rel-size(30px);
            line-height: rel-size(30px);
